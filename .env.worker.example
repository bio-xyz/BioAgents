# ==========================================================================
# Worker Environment Variables
# ==========================================================================
# Copy this file to .env and fill in your values
#
# QUICK START:
#   cp .env.worker.example .env
#   nano .env  # Edit values
#   docker-compose -f docker-compose.worker.yml up -d --scale worker=2
# ==========================================================================

# --------------------------------------------------------------------------
# REQUIRED: Redis (Upstash or managed Redis)
# --------------------------------------------------------------------------
# Get from: https://upstash.com or your Redis provider
REDIS_URL=rediss://default:your-password@your-redis.upstash.io:6379

# --------------------------------------------------------------------------
# REQUIRED: Supabase Database
# --------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# --------------------------------------------------------------------------
# REQUIRED: LLM API Keys (at least one)
# --------------------------------------------------------------------------
OPENAI_API_KEY=sk-xxx
GOOGLE_API_KEY=xxx
ANTHROPIC_API_KEY=sk-ant-xxx
OPENROUTER_API_KEY=

# --------------------------------------------------------------------------
# OPTIONAL: Agent Configuration
# --------------------------------------------------------------------------
# LLM providers: openai, google, anthropic, openrouter
REPLY_LLM_PROVIDER=google
REPLY_LLM_MODEL=gemini-2.5-pro

HYP_LLM_PROVIDER=google
HYP_LLM_MODEL=gemini-2.5-pro

PLANNING_LLM_PROVIDER=google
PLANNING_LLM_MODEL=gemini-2.5-flash

STRUCTURED_LLM_PROVIDER=google
STRUCTURED_LLM_MODEL=gemini-2.5-flash

# --------------------------------------------------------------------------
# OPTIONAL: Literature & Analysis Services
# --------------------------------------------------------------------------
OPENSCHOLAR_API_URL=
EDISON_API_URL=
BIOAGENTS_API_URL=
PRIMARY_LITERATURE_AGENT=
PRIMARY_ANALYSIS_AGENT=

# --------------------------------------------------------------------------
# OPTIONAL: Embeddings
# --------------------------------------------------------------------------
EMBEDDING_PROVIDER=openai
TEXT_EMBEDDING_MODEL=text-embedding-3-large
COHERE_API_KEY=

# --------------------------------------------------------------------------
# OPTIONAL: S3 Storage (for paper generation)
# --------------------------------------------------------------------------
S3_ENDPOINT=
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# --------------------------------------------------------------------------
# OPTIONAL: Worker Concurrency (per worker instance)
# --------------------------------------------------------------------------
CHAT_QUEUE_CONCURRENCY=5
DEEP_RESEARCH_QUEUE_CONCURRENCY=3
PAPER_GENERATION_CONCURRENCY=1
